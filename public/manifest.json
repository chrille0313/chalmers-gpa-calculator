{
  "manifest_version": 3,
  "name": "Chalmers GPA Calculator",
  "description": "Displays weighted and simple GPA stats directly on mex.portal.chalmers.se and in the extension popup.",
  "version": "2.0.0",
  "icons": {
    "16": "icons/16.jpg",
    "32": "icons/32.jpg",
    "48": "icons/48.jpg",
    "128": "icons/128.jpg",
    "512": "icons/512.jpg"
  },
  "action": {
    "default_title": "Show GPA summary",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/16.jpg",
      "32": "icons/32.jpg",
      "48": "icons/48.jpg",
      "128": "icons/128.jpg"
    }
  },
  "host_permissions": ["https://mex.portal.chalmers.se/*"],
  "content_scripts": [
    {
      "matches": ["https://mex.portal.chalmers.se/*"],
      "js": ["content-script.js"],
      "run_at": "document_idle"
    }
  ]
}
